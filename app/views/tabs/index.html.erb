<script type="text/javascript" charset="utf-8">
    setMainHeight();
</script>

<%= header_data do %>
    Tabs list:

    <%= admin_area do %>
      <%= link_to(image_tag('new-icon-24.png'), new_tab_path, class: 'button') %>
    <% end %>
<% end %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th width="20px">Show</th>
    <th>States</th>
    <th colspan='2'>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @tabs.each do |tab| %>
      <tr class='<%= cycle('even', 'odd') %>'>
        <td><%= raw tab.name %></td>

        <td align="center">
            <% if tab.show %>
              <%#= image_tag 'checked-checkbox-icon.png' %>
              <%= image_tag 'visibility-on-16.png' %>
            <% else%>
              <%#= image_tag 'unchecked-checkbox-icon.png' %>
              <%= image_tag 'visibility-off-16.png' %>
            <% end %>
        </td>

        <td>
          <% tab.states.each do |val| %>
              <%= @ticket_states[val.to_i-1].name %><br>
          <% end %>
        </td>

        <td align='center'><%= link_to image_tag('edit-icon.png'), edit_tab_path(tab) %></td>
        <td align='center'><%= link_to image_tag('delete-trash.png'), tab, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

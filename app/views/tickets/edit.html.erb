<h1>Editing ticket</h1>

<%= form_for :ticket, url: ticket_path(@ticket), method: :patch do |f| %>

  <% if @ticket.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@ticket.errors.count, 'error') %> prohibited this ticket from being saved:</h2>

      <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.collection_select :owner_id, @supports, :id, :login_with_full_name, include_blank: true, :selected => @ticket.owner_id %>
  <br>

  <%= f.collection_select :status_id, @states, :id, :name, include_blank: true, :selected => @ticket.status_id %>
  <br>

  <!-- TODO find solution that help to disable all field without error in update -->
  <strong>
  <p>
    <%= f.label :'E-mail' %>:
    <%= @ticket.email %>
  </p>

  <p>
    <%= f.label :Subject %>:
    <%= @ticket.subject %>
  </p>

  <p>
    <%= f.label :Problem %><br>
    <%#= f.text_area :problem, cols: 60, rows: 10 %>
    <%= @ticket.problem %>
  </p>
  </strong>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', tickets_path %>

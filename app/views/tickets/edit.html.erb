<h1>Editing ticket</h1>

<%= form_for :ticket, url: ticket_path(@ticket), method: :patch do |f| %>

  <% if @ticket.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@ticket.errors.count, 'error') %> prohibited this ticket from being saved:</h2>

      <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :Owner %>:
    <select name='selected_owner'>
      <% @supports.each do |support| %>
          <% if support.id == @ticket.owner_id %>
          <option value="<%= support.id %>" selected>
        <% else %>
          <option value="<%= support.id %>">
        <% end %>

        <%= support.login + ' [' + support.first_name + ' ' + support.last_name + ']' %></option>
      <% end %>
    </select>
  </p>

  <p>
    <%= f.label :Status %>:
    <select name='selected_status'>
      <% @states.each do |status| %>
        <% if status.id == @ticket.status_id %>
          <option value="<%= status.id %>" selected>
        <% else %>
          <option value="<%= status.id %>">
        <% end %>

        <%= status.name %></option>
      <% end %>
    </select>
  </p>

  <p>
    <%= f.label :Username %><br>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :'E-mail' %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :Subject %><br>
    <%= f.text_field :subject %>
  </p>

  <p>
    <%= f.label :Problem %><br>
    <%= f.text_area :problem, cols: 60, rows: 10 %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', tickets_path %>

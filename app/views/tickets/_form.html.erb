<script type="text/javascript" charset="utf-8">
    setMainHeight();
</script>

<div class="container">
  <div id="content">
    <div class="header">
      <h2 class="comment_header">
        <%= @ticket.owner_name(@ticket.support_id) %>,
        UUID: <%= @ticket.uuid %>
      </h2>

      <div class="problem">
        <div style="font-weight: bold; font-size: 14px;">Problem:</div>
        <%= h @ticket.problem %>
      </div>

      <%= closed_ticket? do %>
          <%= render partial: 'form_add_comment', locals: {ticket: @ticket} %>
      <% end %>
    </div>

    <div class="comments_area">
      <%= render partial: 'comments', locals: {comments: @comments} %>
    </div>
  </div>
</div>

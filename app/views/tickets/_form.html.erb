<div class="container">
  <div id="content">
    <% if !@support.nil? %>
        <div class="owner_support">Owner: <%= @support.login_with_full_name %></div>
    <% else %>
        <div class="owner_customer">Owner: Customer</div>
    <% end %>

      <p>
        <strong>Date:</strong>
        <%= @ticket.created_at %>
      </p>

      <table width="100%">
        <thead>
        <tr>
          <th>UUID</th>
          <th>Status</th>
          <th>Owner</th>
          <th>Username</th>
          <th>E-mail</th>
          <th>Subject</th>

          <% if self.action_name == 'index' %>
              <th>Problem</th>
              <th colspan="3">Actions</th>
          <% end %>
        </tr>
        </thead>

        <tbody>
        <%= render partial: 'table_row', locals: {ticket: @ticket} %>
        </tbody>
      </table>

      <p>
        <strong>Problem:</strong>
        <%= h @ticket.problem %>
      </p>

    <%= render partial: 'comments', locals: {ticket: @ticket} %>

    <%= render partial: 'form_add_comment', locals: {ticket: @ticket} %>
  </div>
</div>

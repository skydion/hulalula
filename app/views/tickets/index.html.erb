<h1> Listing tickets</h1>

<table border='1'>
  <tr>
    <th width=10%>UUID</th>
    <th width=15%>State</th>
    <th width=5%>Owner</th>
    <th width=10%>Username</th>
    <th width=10%>E-mail</th>
    <th width=15%>Subject</th>
    <th>Problem</th>
  </tr>

  <tbody>
  <% @tickets.each do |ticket| %>
      <%= render partial: 'table_row', locals: {ticket: ticket} %>
  <% end %>
  </tbody>
</table>


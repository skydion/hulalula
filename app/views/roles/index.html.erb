<script type="text/javascript" charset="utf-8">
    setMainHeight();
</script>

<table width="100%">
  <thead>
    <tr>
      <th width="30%">Name</th>
      <th width="60%">Description</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= raw role.name %></td>
        <td><%= raw role.description %></td>

        <td align='center'><%= link_to image_tag('edit-icon.png'), edit_role_path(role) %></td>
        <%= admin_area do %>
          <td align='center'><%= link_to image_tag('delete-trash.png'), role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= admin_area do %>
   <%= link_to 'New Role', new_role_path %>
<% end %>

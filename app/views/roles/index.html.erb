<script type="text/javascript" charset="utf-8">
    setMainHeight();
</script>

<%= header_data do %>
    Roles list:

    <%= admin_area do %>
        <%= link_to(image_tag('new-icon-24.png', alt: ''), new_role_path, class: 'button') %>
    <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th width="30%">Name</th>
      <th>Description</th>
      <th width="40px">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= raw role.name %></td>
        <td><%= raw role.description %></td>

        <td align='center'>
          <%= link_to image_tag('edit-icon.png', alt: ''), edit_role_path(role) %>
          <%= link_to image_tag('delete-trash.png', alt: ''), role, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript" charset="utf-8">
    setMainHeight();
</script>

<table>
  <thead>
      <tr>
        <th>Login</th>
        <th>Password</th>
        <th>First name</th>
        <th>Last name</th>
        <th>E-mail</th>
        <th>Role</th>
        <th colspan='3'>Actions</th>
      </tr>
  </thead>

  <% @supports.each do |support| %>
    <% role = @roles.find_by id: support.role_id %>
    <%= render partial: 'supports/table_row', locals: {support: support, role: role} %>
  <% end %>
</table>

<%= admin_area do %>
  <%= link_to 'New Support', new_support_path %>
<% end %>

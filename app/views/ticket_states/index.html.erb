<table width="100%">
  <thead>
  <tr>
    <th width=50%>Name</th>
    <th colspan='3'>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @ticket_states.each do |ticket_state| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= ticket_state.name %></td>

        <td align='center'><%= link_to image_tag('edit-icon.png'), edit_ticket_state_path(ticket_state) %></td>
        <%= admin_area do %>
          <td align='center'><%= link_to image_tag('delete-trash.png'), ticket_state, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
      </tr>
  <% end %>

  </tbody>
</table>

<%= admin_area do %>
  <%= link_to 'New Ticket State', new_ticket_state_path %>
<% end %>

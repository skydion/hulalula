<h1>Listing Ticket States</h1>

<table border='1'>
  <thead>
    <tr>
      <th width=50%>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ticket_states.each do |ticket_state| %>
      <tr>
        <td><%= ticket_state.name %></td>
        <td><%= link_to 'Show', ticket_state %></td>

        <% if session[:login] == 'root' %>
          <td><%= link_to 'Edit', edit_ticket_state_path(ticket_state) %></td>
          <td><%= link_to 'Destroy', ticket_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<header id="page_header" role="banner" xmlns="http://www.w3.org/1999/html">
  <nav id="utility">
    <p>
      <% unless session[:login] %>
          <%= content_tag :div, yield(:form_login), :id => 'form_login' %>
      <% end %>

      <% if session[:login] %>
        You are logged in as <strong><%= session[:login] %></strong>
        <%= link_to '[Your Account]', controller: 'supports', action: 'edit', id: session[:user_id] %>
        <%= link_to '[Logout]', controller: 'supports', action: 'logout' %>
      <% end %>
    </p>
  </nav>

  <nav id="main_nav" role="navigation">
    <ul>
      <li><%= link_to 'Home', 'root_path' %></li>
      <li><%= link_to 'Creations', 'creations_path' %></li>
      <li><%= link_to 'Campaigns', 'campaigns_path' %></li>
      <li><%= link_to 'Projects', 'projects_path' %></li>
      <li><%= link_to 'Designers', 'designers_path' %></li>
    </ul>
  </nav>
</header>
